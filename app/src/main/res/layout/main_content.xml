<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <!-- Doctors Section -->
    <LinearLayout
        android:id="@+id/doctorsSection"
        android:layout_width="414dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ImageView with a background image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Your Image Description"
                android:src="@drawable/exercise" />

            <!-- TextView inside the ImageView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:alpha="0.8"
                android:text="EXERCISE"
                android:textColor="@color/colorPrimary"
                android:textSize="60sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <!-- Add your content for the Doctors section here -->

    </LinearLayout>

    <!-- Health Related Articles Section -->
    <LinearLayout
        android:id="@+id/articlesSection"
        android:layout_width="410dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/doctorsSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Your Image Description"
                android:src="@drawable/stethoscope" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:alpha="0.8"
                android:text="DOCTORS"
                android:textColor="@color/colorPrimary"
                android:textSize="60sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Add your content for the Health-related articles section here -->

    </LinearLayout>

    <!-- Water Drinking Reminder Section -->
    <LinearLayout
        android:id="@+id/waterReminderSection"
        android:layout_width="410dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/articlesSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Your Image Description"
                android:src="@drawable/water" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:alpha="0.8"
                android:text="REMINDERS"
                android:textColor="@color/colorPrimary"
                android:textSize="60sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Add your content for the Water drinking reminder section here -->

    </LinearLayout>

    <!-- Exercise Section -->
    <LinearLayout
        android:id="@+id/exerciseSection"
        android:layout_width="410dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:padding="0.5dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/waterReminderSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Add your content for the Exercise section here -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Your Image Description"
                android:src="@drawable/img_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:alpha="0.8"
                android:text="ARTICLES"
                android:textColor="@color/colorPrimary"
                android:textSize="60sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
